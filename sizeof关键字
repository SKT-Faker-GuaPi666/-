#include<iostream>
using namespace std;
int main()
{
	//可以利用sizeof关键字求出数据类型的所占内存大小；
	//语法： sizeof（数据类型/变量）
	short num1 = 10;
	cout << "short占用的储存空间为：" << sizeof(num1) << endl;
	int num2 = 10;
	cout << "int占用的储存空间为：" << sizeof(num2) << endl;
	long num3 = 10;
	cout << "long占用的储存空间为：" << sizeof(long) << endl;
	long long num4 = 10;
	cout << "long long占用的储存空间为：" << sizeof(num4) << endl;
	system("pause");
	return 0;
}
