#include<iostream>
using namespace std;
int main1()
{
	//加减乘除；
	int a1 = 20;
	int b1 = 3;
	
	cout << a1 + b1 << endl;
	cout << a1 - b1 << endl;
	cout << a1 * b1 << endl;
	cout << a1 / b1 << endl;//两个整数相除，结果依然是整数，将小数部分去除；

	int a2 = 5;
	int b2 = 10;

	cout << a2 / b2 << endl;
	//两个小数可以相除，且结果可以为小数；
	double a3 = 0.1;
	double b3 = 0.3;

	cout << a3 / b3 << endl;
	system("pause");
	return 0;
}
int main2()
{
	//取模运算本质上是求余数；
	int a1 = 21;
	int b1 = 5;
	cout << a1 % b1 << endl;

	int a2 = 23;
	int b2 = 24;
	cout << a2 % b2 << endl;

	/*int a3 = 20;
	int b3 = 0;
	cout << a3 % b3 << endl;
	除数为零违反数学规律，所以无法运行；*/

	/*double a4 = 3.14;
	float b4 = 2.18f;
	cout << a4 % b4 << endl;*/
	//c++中小数是不可以进行取模运算的；


	system("pause");
	return 0;
}
int main3()
{
	//前置递增，先给变量进行++，然后进行计算；
	int a1 = 520;
	int b1 = ++a1*10000+1314;
	cout << a1 << endl;
	cout << b1 << endl;
	//后置递增，先进行计算，然后给变量进行++；
	int a2 = 520;
	int b2 = a2++ * 10000 + 1314;
	cout << a2 << endl;
	cout << b2 << endl;
	//前置递减，先给变量进行--，然后进行运算；
	int a3 = 10;
	int b3 = --a3 * 100 + 98;
	cout << a3 << endl;
	cout << b3 << endl;
	//后置递减，先进行运算，然后给变量进行--；
	int a4 = 10;
	int b4 = a4-- * 100 + 314;
	cout << a4 << endl;
	cout << b4 << endl;

	system("pause");
	return 0;
  int main()
{
	//1.赋值；
	int a = 10;
	a = 520;
	cout << "a=" << a << endl;
	//2.加等于；
	a = 10;
	a += 5;
	cout << "a=" << a << endl;
	//3.减等于；
	a = 10;
	a -= 5;
	cout << "a=" << a << endl;
	//4.乘等于；
	a = 10;
	a *= 52;
	cout << "a=" << a << endl;
	//5.除等于；
	a = 10;
	a /= 5;
	cout << "a=" << a << endl;
	//6.模等于；
	a = 10;
	a %= 3;
	cout << "a=" << a << endl;


	system("pause");
	return 0;
}
