#include<iostream>
using namespace std;
int main()
{    //单精度float;
	 //双精度double;
	 //默认情况下，输出一个小数，会显示出6位有效数字；
	float f1 = 3.141592654f;
	double d2 = 3.141592654;
	cout << "f1=" << f1 << endl;
	cout << "d2=" << d2 << endl;
	//统计float、double的占用内存；
	cout << "float的占用内存为：" << sizeof(float) << endl;
	cout << "double的占用内存为：" << sizeof(double) << endl;
    //科学计数法；
	float f2 = 4e2;//4*10^2;
	float f3 = 4e-2;//4*10^-2;
	cout << "f2=" << f2 << endl;
	cout << "f3=" << f3 << endl;
	system("pause");
	return 0;
}
