#include<iostream>
using namespace std;
int main()
{
	//1.c语言风格字符串；
	//  char 字符串名后面要跟[];
	//  等号后面 要用双引号 包含起来字符串；
	char 冠军[] = "skt!!!  让我们恭喜skt";
	cout << "2016年英雄联盟全球总冠军是  " << 冠军 << endl;

	//2.c++语言风格字符串；
	// 在2019之前的VS版本中，要包含一个头文件 #include<string>
	string msi冠军 = "RNG!!!  3比1，让我们恭喜RNG！！！\n有一位知名上单说过4个中国人赢不了，但是五个中国人一定能赢!!!";
		cout << "2018年英雄联盟季中赛冠军是  " << msi冠军 << endl;

	system("pause");
	return 0;
}
